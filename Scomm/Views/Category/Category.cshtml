@{
    ViewData["Title"] = "Category Page";
}
<h1>@ViewData["Title"]</h1>

@*<p>Use this page to detail your site's privacy policy.</p>*@

@model IEnumerable<Category>
@using DAL.EntityModel;
@*@using System.Web.Helpers;*@
@*@using System.Web;*@

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-body">
        <button class="btn btn-success AddCategory">Add Category</button>
        <div style="height:10px;"></div>
        <div id="AddCategoryForm"></div>

        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed" id="categoryTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>CategoryName</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="Id">@Html.DisplayFor(modelItem => item.ID)</td>
                        <td class="CategoryName">
                            <span>@Html.DisplayFor(modelItem => item.CategoryName)</span>
                            <input type="text" value="@item.CategoryName" style="display:none">
                        </td>
                        <td>
                            <a id="editStudentModal" href="javascript:;"
                               class="btn btn-info Edit">
                                <i class="glyphicon glyphicon-pencil"></i>  Edit
                            </a>
                            <a id="editStudentModal" href="javascript:;"
                               class="btn btn-info Update" style="display:none">
                                <i class="glyphicon glyphicon-pencil"></i>  Update
                            </a>
                            <a id="editStudentModal" href="javascript:;"
                               class="btn btn-info Cancel" style="display:none">
                                <i class="glyphicon glyphicon-pencil"></i>  Cancel
                            </a>
                            <a id="RemoveCategory" data-toggle="modal" asp-action="RemoveCategory" asp-route-id="@item.ID" class="btn btn-danger" asp-controller="Category">
                                <i class="glyphicon glyphicon-trash"></i>  Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
    {
    <script src="~/js/CategoryAdd.js" asp-append-version="true"></script>
}